<body>

<!-- Begin page content -->
<div class="container" style="padding-top: 2rem;">
    <div class="row">
        <div class="col-lg-12" id="messages" style="font-size: 12px;">
        </div>
    </div>
</div>

<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal" id="chat_form" role="form">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="text" id="m" class="form-control">
                                  <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">发射</button>
                                  </span>
                            </div>
                            <!-- /input-group -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
<script>
    var socket = io();
    var chatName = prompt("输入聊天时显示的昵称","请在这里输入");
    var message = function(name,content,time){
        this.name = name;
        this.content = content;
        this.time = time?time:new Date();
    }
    $('#chat_form').submit(function(){
        var msg = new message(chatName?chatName:'拉屎星人',$('#m').val(),null);
        if(msg.content!=''){
            socket.emit('message_send',msg);
            $('#m').val('');
        }else{
            alert('不能发送空消息你这逗比')
        }
        return false;
    });
    socket.on('message_send',function(msg){
        $('#messages').append($('<div class="alert alert-info chat-message" role="alert">').text(msg.name + ' : '+msg.content));
    });
</script>
</body>
